<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <property name="APP_NAME" value="grab-resale"/>
    <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>
    <property name="MAX_FILE_SIZE" value="50MB"/>
    <property name="MAX_HISTORY" value="30"/>
    <property name="TOTAL_SIZE_CAP" value="1GB"/>

    <springProfile name="default | dev">

        <appender name="CONSOLE-DEV" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>[%d{HH:mm:ss.SSS}] [%highlight(%-5level)] [%X{traceId:-no-trace}] %cyan(%logger{36}) - %msg%n</pattern>
            </encoder>
        </appender>

        <appender name="FILE-DEV" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_DIR}/${APP_NAME}-dev.log</file>
            <encoder>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%X{traceId:-}] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_DIR}/archive/${APP_NAME}-dev.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
                <maxHistory>7</maxHistory>
                <totalSizeCap>500MB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <logger name="com.vonnue" level="DEBUG"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE-DEV"/>
            <appender-ref ref="FILE-DEV"/>
        </root>

    </springProfile>

    <!-- ===== Prod profile ===== -->
    <springProfile name="prod">

        <appender name="CONSOLE-PROD" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.classic.encoder.JsonEncoder"/>
        </appender>

        <appender name="FILE-PROD" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_DIR}/${APP_NAME}.log</file>
            <encoder class="ch.qos.logback.classic.encoder.JsonEncoder"/>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_DIR}/archive/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
                <maxHistory>${MAX_HISTORY}</maxHistory>
                <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
            </rollingPolicy>
        </appender>

        <logger name="com.vonnue" level="INFO"/>

        <root level="WARN">
            <appender-ref ref="CONSOLE-PROD"/>
            <appender-ref ref="FILE-PROD"/>
        </root>

    </springProfile>

</configuration>
